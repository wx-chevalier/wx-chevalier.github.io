      <title>商业模式画布</title>
      <link>https://ng-tech.icu/books/product-series/1.%E5%AE%9A%E4%B9%89%E4%B8%8E%E8%AE%BE%E8%AE%A1/%E5%95%86%E4%B8%9A%E5%88%86%E6%9E%90%E6%A8%A1%E5%9E%8B/%E5%95%86%E4%B8%9A%E6%A8%A1%E5%BC%8F%E7%94%BB%E5%B8%83/%E5%95%86%E4%B8%9A%E6%A8%A1%E5%BC%8F%E7%94%BB%E5%B8%83/</link>
