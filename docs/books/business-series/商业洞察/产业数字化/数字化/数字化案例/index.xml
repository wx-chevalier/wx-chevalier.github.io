      <title>贝壳</title>
      <link>https://ng-tech.icu/books/business-series/%E5%95%86%E4%B8%9A%E6%B4%9E%E5%AF%9F/%E4%BA%A7%E4%B8%9A%E6%95%B0%E5%AD%97%E5%8C%96/%E6%95%B0%E5%AD%97%E5%8C%96/%E6%95%B0%E5%AD%97%E5%8C%96%E6%A1%88%E4%BE%8B/%E8%B4%9D%E5%A3%B3/</link>
