&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl"> &lt;span class="nb">document&lt;/span>&lt;span class="p">.&lt;/span>&lt;span class="nx">_qsa&lt;/span> &lt;span class="o">=&lt;/span> &lt;span class="p">[];&lt;/span>
