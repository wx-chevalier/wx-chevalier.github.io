    <item>
      <title>实现原理</title>
      <link>https://ng-tech.icu/books/java-series/3.%E5%B9%B6%E5%8F%91%E7%BC%96%E7%A8%8B/%E7%BA%BF%E7%A8%8B%E5%AE%89%E5%85%A8/%E9%94%81/synchronized/%E5%AE%9E%E7%8E%B0%E5%8E%9F%E7%90%86/</link>
