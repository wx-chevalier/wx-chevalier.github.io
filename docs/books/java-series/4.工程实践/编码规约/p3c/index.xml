&lt;/span&gt;&lt;/span&gt;&lt;span class=&#34;line&#34;&gt;&lt;span class=&#34;cl&#34;&gt;                        &lt;span class=&#34;nt&#34;&gt;&amp;lt;ruleset&amp;gt;&lt;/span&gt;src/main/resources/p3c-pmd/rulesets/java/ali-constant.xml&lt;span class=&#34;nt&#34;&gt;&amp;lt;/ruleset&amp;gt;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span class=&#34;line&#34;&gt;&lt;span class=&#34;cl&#34;&gt;                        &lt;span class=&#34;nt&#34;&gt;&amp;lt;ruleset&amp;gt;&lt;/span&gt;src/main/resources/p3c-pmd/rulesets/java/ali-exception.xml&lt;span class=&#34;nt&#34;&gt;&amp;lt;/ruleset&amp;gt;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span class=&#34;line&#34;&gt;&lt;span class=&#34;cl&#34;&gt;                        &lt;span class=&#34;nt&#34;&gt;&amp;lt;ruleset&amp;gt;&lt;/span&gt;src/main/resources/p3c-pmd/rulesets/java/ali-flowcontrol.xml&lt;span class=&#34;nt&#34;&gt;&amp;lt;/ruleset&amp;gt;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span class=&#34;line&#34;&gt;&lt;span class=&#34;cl&#34;&gt;                        &lt;span class=&#34;nt&#34;&gt;&amp;lt;ruleset&amp;gt;&lt;/span&gt;src/main/resources/p3c-pmd/rulesets/java/ali-naming.xml&lt;span class=&#34;nt&#34;&gt;&amp;lt;/ruleset&amp;gt;&lt;/span&gt;
