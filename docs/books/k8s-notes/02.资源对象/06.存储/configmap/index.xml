    <item>
      <title>创建与使用</title>
      <link>https://ng-tech.icu/books/k8s-notes/02.%E8%B5%84%E6%BA%90%E5%AF%B9%E8%B1%A1/06.%E5%AD%98%E5%82%A8/configmap/%E5%88%9B%E5%BB%BA%E4%B8%8E%E4%BD%BF%E7%94%A8/</link>
